package fundamentals;
import java.util.Scanner;
public class helloWorld{

	
		public static void main(String args[]) {
			Scanner scan=new Scanner(System.in);
			System.out.println("Enter the value of row and Colums");
			int n=scan.nextInt();
			int p=1;
			int i=1;
			while(i<=n) {
				int j=1;
				while(j<=i) {
					System.out.print(p);
					
					j++;
					
				}
				System.out.println();
				i++;
				p++;
				
				
			}
			

           
	}
}


Enter the value of row and Colums
4
1
22
333
4444
